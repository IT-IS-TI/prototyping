<mujoco model="arm_task">

    <option timestep="0.0002" />
    <actuator>
        <motor gear="1" joint="hinge_1" name="actuator_motor1" ctrlrange="-100 100" ctrllimited="true"/>
        <motor gear="2" joint="hinge_2" name="actuator_motor2" ctrlrange="-100 100" ctrllimited="true"/>
        <motor gear="0.05" joint="hinge_3" name="actuator_motor3" ctrlrange="-100 100" ctrllimited="true"/>
        <motor gear="0.1" joint="hinge_5" name="actuator_motor5" ctrlrange="-100 100" ctrllimited="true"/>
    </actuator>

    <visual>
        <headlight ambient="0.5 0.5 0.5" />
    </visual>

    <asset>
        <material name="white" rgba="1 1 1 1" />
        <material name="blue" rgba="0 0 1 1" />
        <material name="green" rgba="0 1 0 1" />
        <material name="red" rgba="1 0 0 1" />
    </asset>

    <option gravity="0 0 -9.81" />

    <worldbody>
    <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
        <geom type="plane" size="1 1 0.1" rgba="0 .9 0 1"/>

        <body pos="0 0 1" euler="0 0 0" name="body">
            <inertial pos="0 0 0" mass="10" diaginertia="0.01 0.01 0.01"/>
            <geom type="box" size=".2 .4 .3" rgba="0.2 0.2 0.2 1"/>

            <body pos="0 0 0.5" euler="0 0 0" name="head">
                <inertial pos="0 0 0" mass="1" diaginertia="0.01 0.01 0.01"/>
                <geom type="box" size=".2 .2 .2" rgba="0.2 0.2 0.2 1"/>
            </body>

            <body name="link_1" pos="0 -0.5 0.2">
                <joint name="hinge_1" pos="0 0 0" axis="0 1 0" />
                <geom type="cylinder" size=".2 .1" pos="0 0 0" euler="90 0 0" material="red" />
                <body name="link_2" pos="0 -0.2 0" euler="0 90 90">
                    <joint name="hinge_2" pos="0 0 0" axis="0 0 1" />
                    <geom type="cylinder" size=".1 .2" pos="0 0 0" euler="0 0 0" material="blue" />
                    <body name="link_3" pos="0 -0.2 0" euler="90 0 0">
                        <joint name="hinge_3" pos="0 0 0" axis="0 0 1" />
                        <geom type="cylinder" size=".1 .1" pos="0 0 0" euler="0 0 0" material="green" />
                        <body name="link_4" pos="0 0 0.3" euler="0 0 0">
                            <geom type="box" size="0.05 0.05 .2" rgba="0.5 0.2 0.2 1"/>
                            <body name="link_5" pos="0 0 0.2" euler="0 90 90">
                                <joint name="hinge_5" pos="0 0 0" axis="0 0 1" />
                                <geom type="cylinder" size=".1 .1" pos="0 0 0" euler="0 0 0" material="red" />
                                <body name="link_6" pos="0 0.2 0" euler="0 0 0">
                                    <geom type="box" size="0.05 0.1 0.05" rgba="0.5 0.2 0.2 1"/>
                                    <body name="ball" pos="0 0.15 0" euler="0 0 0">
                                        <inertial pos="0 0 0" mass="5" diaginertia="0.01 0.01 0.01"/>
                                        <geom type="sphere" size=".1" rgba=".5 .5 .5 1"/>
                                    </body>
                                </body>
                            </body>
                        </body>
                    </body>
                </body>
            </body>

        </body>

